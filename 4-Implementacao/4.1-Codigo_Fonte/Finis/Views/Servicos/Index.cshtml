@model IEnumerable<Finis.Models.Servico>

@{
    ViewBag.Title = "Cadastro de Serviços";
}

<script>

    function deletaRegistro(id) {

        $.ajax({
                 type: "GET",
                 url: "@Url.Action("DeletarRegistro", "Servicos")",
                 data: { id: id },
                 dataType: "json",
                 success: function (dados) {
                     location.reload();
                 }
             });
    }

    function carregaDetalhes(id) {

             $.ajax({
                 type: "GET",
                 url: "@Url.Action("Detalhes", "Servicos")",
                 data: { id: id },
                 dataType: "json",
                 success: function (dados) {
                     obj = JSON.parse(dados.Resultado);
                     preencheModalDetalhes(obj);
                 }
        });
    }

    function preencheModalDetalhes(obj) {

        document.getElementById('nome').innerHTML = obj.nome;
        document.getElementById('valor').innerHTML = obj.valor;
        document.getElementById('descricao').innerHTML = obj.descricao;
    }

</script>
@using (Html.BeginForm())
{
    <div id="container-busca">
        <div class="nav-wrapper">
            <form>
                <div class="row">
                    <div class="input-field col s8">
                        @Html.Label("Buscar")
                        @Html.Editor("pesquisar", new { htmlAttributes = new { @class = "validate" } })
                    </div>
                    <div class="col s2">
                        <button type="submit" class="btn-floating" id="botao-busca">
                            <i class="material-icons">search</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<div class="fixed-action-btn">
    <a class="btn-floating btn-large red" href="@Url.Action("Create","Servicos")">
        <i class="material-icons">add</i>
    </a>
</div>
<table class="highlight">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>Opções</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <a class="btn-floating blue" href="@Url.Action("Edit", "Servicos", new { id = @item.id })"><i class="material-icons">mode_edit</i></a>
                <a class="btn-floating green details modal-trigger" onclick="carregaDetalhes(@item.id)" href="#modal1">
                    <i class="fa fa-info" aria-hidden="true"></i>
                </a>
                <a class="btn-floating red" onclick="showModal(@item.id, 'md1'); return false;"><i class="material-icons">delete</i></a>
            </td>
        </tr>
    }

</table>

<!-- Estrutura do Modal de detalhes -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h5>Informações do registro</h5>

        <div class="row" id="linha-detalhes">
            <div class="col s6">
                <label>Nome:</label>
            </div>
            <div class="col s6">
                <label>Valor:</label>
            </div>
        </div>
        <div class="row" id="linha-detalhes">
            <div class="col s6">
                <label class="texto-detalhes" id="nome">.</label>
            </div>
            <div class="col s6">
                <label class="texto-detalhes" id="valor">.</label>
            </div>
        </div>

        <div class="row" id="linha-detalhes">
            <div class="col s12">
                <label>Descrição:</label>
            </div>
        </div>
        <div class="row" id="linha-detalhes">
            <div class="col s12">
                <label class="texto-detalhes" id="descricao">.</label>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <hr />
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Fechar</a>
    </div>
</div>


<div id="md1" class="modal">
    <div class="modal-content">
        <h4>Confirmação</h4>
        <p>Tem certeza que deseja remover este registro?</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="waves-effect waves-red btn-flat" onclick="$('#md1').closeModal(); return false;">Cancelar</a>
        <a href="#" class="waves-effect waves-green btn-flat" id="md1_YesBtn">Confirmar</a>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        function showModal(id, modal) {
            $('#' + modal).openModal();
            $('#' + modal + '_YesBtn').click(function () { $('#' + modal).closeModal(); deletaRegistro(id); });
        }

        $(document).ready(function () {

            $('.modal-trigger').leanModal();
        });

    </script>
}
