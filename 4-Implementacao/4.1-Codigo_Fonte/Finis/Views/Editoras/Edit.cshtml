@model Finis.Models.Editora

@{
    ViewBag.Title = "Alterar Editora";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="container" id="formulario">

        @Html.ValidationSummary(true, "", new { @class = "validate" })
        @Html.HiddenFor(model => model.date_insert)
        @Html.HiddenFor(model => model.date_update)
        @Html.HiddenFor(model => model.user_update)
        @Html.HiddenFor(model => model.id)

        <form class="col s12">
            <div class="row">
                <div class="input-field col s8">
                    @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "validate" })
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "validate" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "validate" })
                </div>
                <div class="input-field col s4">
                    @Html.LabelFor(model => model.cnpj, htmlAttributes: new { @class = "validate" })
                    @Html.EditorFor(model => model.cnpj, new { htmlAttributes = new { @class = "validate" } })
                    @Html.ValidationMessageFor(model => model.cnpj, "", new { @class = "validate" })
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "validate" })
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "validate" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "validate" })
                </div>
                <div class="input-field col s4">
                    @Html.LabelFor(model => model.telefone, htmlAttributes: new { @class = "validate" })
                    @Html.EditorFor(model => model.telefone, new { htmlAttributes = new { @id = "telefone", @class = "validate" } })
                    @Html.ValidationMessageFor(model => model.telefone, "", new { @class = "validate" })
                </div>
            </div>
        </form>
        <div class="row">
            <button class="btn waves-effect waves-light" onClick="location.href='@Url.Action("Index","Editoras")'" type="button" name="action">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                Voltar
            </button>
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Salvar
                <i class="fa fa-plus" aria-hidden="true"></i>
            </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {
            $("#telefone").mask("(99)99999-9999");
        });

    </script>
}
